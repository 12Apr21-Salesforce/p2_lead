<aura:component controller="SearchProperties_CC" implements="flexipage:availableForRecordHome,force:hasRecordId"
    access="global">
    <aura:attribute name="propertylist" type="Property__c[]" />
    <aura:attribute name="key" type="String" />
    <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
    <lightning:layout class="slds-page-header slds-page-header_object-home">
        <lightning:layoutItem>
            <lightning:icon iconName="standard:scan_card" alternativeText="My Search" />
        </lightning:layoutItem>
        <lightning:layoutItem padding="horizontal-small">
            <div class="page-section page-header">
                <h1 class="slds-text-heading_label">Search Available Property </h1>
            </div>
        </lightning:layoutItem>
    </lightning:layout>

    <lightning:layout>
        <lightning:layoutItem padding="around-small" size="12">
            <div aria-labelledby="newexpenseform">
                <!-- BOXED AREA -->
                <fieldset class="slds-box slds-theme_default slds-container_small">
                    <legend id="newexpenseform" class="slds-text-heading_small
                                                       slds-p-vertical_medium">
                        Your Dream House is Here!!
                    </legend>
                    <lightning:input type="text" name="searchKey" label="Enter" aura:id="searchKey"
                        onchange="{!c.searchKeyChange}" placeholder="Search" size="10" />

                </fieldset>

            </div>
        </lightning:layoutItem>
    </lightning:layout>

    <table class="slds-table slds-table_bordered slds-table_striped slds-table_cell-buffer slds-table_fixed-layout">
        <thead>
            <tr class="slds-text-heading_label">
                <th scope="col">
                    <div class="slds-truncate" title="Property Name">Property Name</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate" title="Apartment Name">Apartment Name</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate" title="Address: Street">Address: Street</div>
                </th>
                <th scope="col">
                    <div class="slds-truncate" title="Address: City">Address: City</div>
                </th>
            </tr>
        </thead>
        <tbody>
            <aura:iteration items="{!v.propertylist}" var="property">
                <tr>
                    <td>
                        <div class="slds-truncate" title="{!property.Name}">{!property.Name}</div>
                    </td>
                    <td>
                        <div class="slds-truncate" title="{!property.Apartment_Name__r.Name}">
                            {!property.Apartment_Name__r.Name}</div>
                    </td>
                    <td>
                        <div class="slds-truncate" title="{!property.Street_Address__c}">{!property.Street_Address__c}
                        </div>
                    </td>
                    <td>
                        <div class="slds-truncate" title="{!property.City__c}">{!property.City__c}</div>
                    </td>
                </tr>
            </aura:iteration>
        </tbody>

    </table>

</aura:component>